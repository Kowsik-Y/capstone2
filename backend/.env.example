# ===================================
# ClipSearchBackend Configuration
# ===================================

# Server Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Data Paths
DATA_ROOT=./data
ZIP_PATH=./archive.zip

# OpenAI Configuration (for OCR and description generation)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4.1-nano

# Model Configuration
CLIP_MODEL_NAME=laion/CLIP-ViT-L-14-laion2B-s32B-b82K

# Search Configuration
DEFAULT_TOP_K=5
SEMANTIC_TOP_K=100
MAX_DECORATION_SCORE=0.25
MIN_PLAIN_SCORE=0.28

# Vector Database Configuration
QDRANT_COLLECTION_NAME=jewellery_images

# Jewelry Categories (comma-separated)
CATEGORIES=ring,necklace

# Device Configuration (auto-detected if not set)
# Options: cpu, cuda, mps
DEVICE=cpu
